{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    ".bak",
    "./node_modules",
    "./node_modules/typescript",
    "./tmp",
    "./info",
    "./docs"
  ],
  "compilerOptions": {
    "target": "ES2023",
    "allowJs": true,
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "lib": ["dom", "es2023"]
  }
}
